{
  "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2016-11-28/dtlArtifacts.json",
  "title": "QA vm configuration",
  "publisher": "Microsoft",
  "description": "Setup configuration for spf install",
  "tags": [
    "Windows"
  ],
  "targetOsType": "Windows",
  "parameters": {
    "dbServerType": {
      "type": "string",
      "displayName": "Server type",
      "description": "Server type",
	  "allowEmpty": false,
	  "defaultValue": "Oracle",
	  "allowedValues": [
        "Oracle", "MSSQL"
      ]
    },
	"dbInstance": {
      "type": "string",
      "displayName": "Server type",
      "description": "Server type",
	  "allowEmpty": false,
	  "defaultValue": "SDAPres",
	  "allowedValues": [
        "SDAPres", "SDADev", "ADWDev"
      ]
    },
  },
  "runCommand": {
	"commandToExecute": "cmd /c echo Restarting this virtual machine."
  }
}