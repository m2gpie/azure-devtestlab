{
  "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2016-11-28/dtlArtifacts.json",
  "title": "QA vm configuration v11",
  "description": "Setup configuration for spf install",
  "tags": [
    "Windows"
  ],
  "targetOsType": "Windows",
  "parameters": {
	"dbServerType": {
      "type": "string",
      "displayName": "Db server type",
      "description": "Server type for spf",
	  "defaultValue": "Oracle",
	  "allowedValues": [
        "Oracle", "MSSQL"
      ]
    },
	"dbInstance": {
      "type": "string",
      "displayName": "Database instance",
      "description": "Db SDADev or ADWDev",
	  "defaultValue": "ADWDev",
	  "allowedValues": [
        "ADWDev", "SDADev", "SDAPres"
      ]
    }
  },
  "runCommand": {
	"commandToExecute": "[concat('powershell.exe -ExecutionPolicy bypass \"& ./qa-vm-config.ps1', ' -dbType ''', parameters('dbServerType'), ''' -dbInsta ', parameters('dbInstance'), '''\"')])"
  }
}